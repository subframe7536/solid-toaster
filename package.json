{
  "name": "solid-toaster",
  "version": "0.1.0",
  "description": "An advanced sonner-like toast component for solid.js",
  "homepage": "https://github.com/subframe7536/solid-toaster#readme",
  "bugs": {
    "url": "https://github.com/subframe7536/solid-toaster/issues"
  },
  "license": "MIT",
  "author": "subframe7536",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subframe7536/solid-toaster.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./compact": "./dist/compact.js",
    "./package.json": "./package.json",
    "./style.css": "./dist/styles.css",
    "./base.css": "./dist/base.css",
    "./theme.css": "./dist/theme.css"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite serve playground",
    "test": "vitest",
    "lint": "oxlint",
    "format": "oxfmt",
    "typecheck": "tsc --noEmit",
    "qa": "oxfmt && oxlint --fix --deny-warnings && tsc --noEmit",
    "release": "bun run test --run && bumpp --all",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.90",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.7",
    "@unocss/reset": "^66.6.0",
    "bumpp": "^10.4.1",
    "cls-variant": "^1.0.2",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^28.0.0",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "unocss": "^66.6.0",
    "vite": "^8.0.0-beta.13",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "solid-js": "^1.9.11"
  },
  "overrides": {
    "@unocss/inspector": "npm:has-flag",
    "vite": "^8.0.0-beta.13"
  }
}
